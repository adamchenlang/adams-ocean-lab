---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>
		<div class="social-links">
			<a href="https://www.xiaohongshu.com/user/profile/56d8aadaaed758167d9d25d9" target="_blank" class="social-icon">
				<span class="sr-only">Follow on Xiaohongshu</span>
				<svg viewBox="0 0 100 100" aria-hidden="true" width="32" height="32">
					<circle cx="50" cy="50" r="50" fill="#FF2442"/>
					<text x="50" y="62" font-size="28" font-weight="bold" fill="white" text-anchor="middle" font-family="Arial, sans-serif">小红书</text>
				</svg>
			</a>
			<a href="https://www.tiktok.com/@adamchenlang?is_from_webapp=1&sender_device=pc" target="_blank" class="social-icon">
				<span class="sr-only">Follow on TikTok</span>
				<svg viewBox="0 0 100 100" aria-hidden="true" width="32" height="32">
					<circle cx="50" cy="50" r="50" fill="black"/>
					<g transform="translate(30, 25) scale(0.8)">
						<!-- TikTok musical note icon -->
						<path fill="#25F4EE" d="M41 4H32v37c0 5-4 9-9 9s-9-4-9-9 4-9 9-9c1 0 2 0 3 1V24c-1 0-2-1-3-1-8 0-14 6-14 14s6 14 14 14 14-6 14-14V17c3 2 7 3 11 3V11c-4 0-7-3-7-7z"/>
						<path fill="#FE2C55" d="M43 4H34v37c0 5-4 9-9 9s-9-4-9-9 4-9 9-9c1 0 2 0 3 1V24c-1 0-2-1-3-1-8 0-14 6-14 14s6 14 14 14 14-6 14-14V17c3 2 7 3 11 3V11c-4 0-7-3-7-7z"/>
						<path fill="white" d="M45 4H36v37c0 5-4 9-9 9s-9-4-9-9 4-9 9-9c1 0 2 0 3 1V24c-1 0-2-1-3-1-8 0-14 6-14 14s6 14 14 14 14-6 14-14V17c3 2 7 3 11 3V11c-4 0-7-3-7-7z"/>
					</g>
				</svg>
			</a>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
